@model OzSapkaTShirt.Controllers.ForgetModel

<h1>Şifremi Unuttum</h1>
<hr />
@using (Html.BeginForm("ForgetPassword", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <form asp-action="ForgetPassword" asp-controller="Users" >
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EMail" class="control-label"></label>
            <input asp-for="EMail" class="form-control" />
            <span asp-validation-for="EMail" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Tamam" class="btn btn-primary" />
        </div>
    </form>
}


